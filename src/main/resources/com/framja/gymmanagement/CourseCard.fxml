                            <Label fx:id="course_id" alignment="CENTER" prefHeight="27.0" prefWidth="288.0" text="Label">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                        </children>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="300.0">
                        <children>
                            <Label prefHeight="21.0" prefWidth="119.0" text="Description:">
                                <HBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                </HBox.margin>
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>
                            <Label fx:id="course_name" alignment="TOP_LEFT" prefHeight="21.0" prefWidth="167.0" text="Label">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox prefHeight="25.0" prefWidth="300.0">
                        <children>
                            <Label prefHeight="21.0" prefWidth="164.0" text="Available Classes:">
